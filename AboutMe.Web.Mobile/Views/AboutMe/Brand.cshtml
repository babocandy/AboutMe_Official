@section Body{

    <div class="wrap brand">
    <!--header-->
    @{ Html.RenderPartial("~/Views/AboutMePartial/_Header.cshtml");}
    <!--//header-->
    <!--container-->
    <div class="container">
        <div class="h2_area">
            <a href="#" class="historyback"><img src="/aboutCom/images/common/btn_historyback.gif" alt="뒤로가기" /></a>
            <h2>브랜드스토리</h2>
