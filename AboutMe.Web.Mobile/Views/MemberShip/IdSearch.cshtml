@section Body{

    <div class="wrap">
        @{ Html.RenderPartial("~/Views/AboutMePartial/_Header.cshtml");}


        <!--container-->
        <div class="container">
            <div class="h2_area">
                <a href="#" class="historyback"><img src="/aboutCom/images/common/btn_historyback.gif" alt="뒤로가기" /></a>
                <h2>아이디 찾기</h2>
            </div>
            <!-- 아이디 찾기 입력 -->
            <div class="searchform boxtypea">
@using (Html.BeginForm("IdSearch_End", "MemberShip", FormMethod.Post, new { id = "frmPopSearch", name = "frmPopSearch" }))
{
@Html.AntiForgeryToken()  //폼 데이터 위조 방지 토큰 생성

                <input type="hidden" name="M_EMAIL" value="" />
                <input type="hidden" name="M_MOBILE" value="" />
    <!--리턴값-->
    <input type="hidden" name="M_ID" value="" />
    <input type="hidden" name="M_CREDATE" value="" />

                    <fieldset>
                        <legend>아이디 찾기 폼</legend>
                        <ul>
                            <li>
                                <dl>
                                    <dt>이름</dt>
                                    <dd class="frm_name"><input type="text" class="ipttypea" style="width:100%;" title="이름 입력" name="M_NAME" value="" maxlength="20" /></dd>
                                </dl>
                            </li>
                            <li>
                                <dl>
                                    <dt>이메일</dt>
