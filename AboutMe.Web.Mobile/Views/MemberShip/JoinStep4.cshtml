@{
    ViewBag.Title = "Mobile-JoinStep4";
    Layout = "~/Views/Shared/_AboutMeLayoutA.cshtml";
}

@{
    //실명인증 작업구분을위한 unique한 값 생성 :50 byte 이내
    Random r = new Random();
    int randomNumber = r.Next(10000000, 90000000);
    string strNOW_TIME = @DateTime.Now.ToString("yyyyMMdd_HHmmss");
    string strWORK_TMP_ID = @strNOW_TIME + "_" + @randomNumber.ToString();

}

@section Head{
    @{ Html.RenderPartial("~/Views/AboutMePartial/_Head.cshtml");}
    <link href="/aboutCom/css/membership.css" rel="stylesheet" />
}


<!--header-->
@section Header{

}
<!--//header-->
@section Scripts{

  

}

@section Body{

    <div class="wrap join">
        @{ Html.RenderPartial("~/Views/AboutMePartial/_Header.cshtml");}


        <!--container-->
        <div class="container step4">
            <div class="h2_area">
                <a href="#" class="historyback"><img src="/aboutCom/images/common/btn_historyback.gif" alt="뒤로가기" /></a>
                <h2>회원가입</h2>
            </div>
            <!-- 약관동의 -->
            <div class="boxtypeb">
                <!-- 회원가입 순서 -->
                <div class="joinstep">
                    <h3 class="hidden">가입완료</h3>
                    <ul>
                        <li><i class="ico_d1"></i><br />01.<br />실명확인</li>
                        <li><i class="ico_d2"></i><br />02.<br />약관동의</li>
                        <li><i class="ico_d3"></i><br />03.<br />회원정보입력</li>
                        <li class="cnt"><i class="ico_d4"></i><br />04.<br />가입완료<span class="hidden">-현재위치</span></li>
                    </ul>
                </div>
                <p class="msg">매장에서 멤버쉽카드를 발급받으신 회원님은 가입 시 기재한 정보(이름,생년월일,휴대폰번호)를 회원가입 시 동일하게  입력하셔야 멤버쉽 카드번호가 자동으로 등록됩니다.</p>
                <!-- //회원가입 순서 -->
            </div>
            <!-- 회원가입완료 -->
            <div class="boxtypea">
                <div class="title">
                    <span class="member"><strong>최고운</strong> 고객님</span>
                    <p class="titmsg">
                        ABOUTME 회원가입을 진심으로 감사 드립니다.<br />
                        아래의 정보로 회원 등록이 완료되었습니다.
                    </p>
                </div>
                <table class="mbinfo">
                    <caption>가입정보 표</caption>
                    <colgroup>
                        <col width="20%" />
                        <col width="*" />
                    </colgroup>
                    <tbody>
                        <tr>
                            <th>아이디</th>
                            <td>@ViewBag.M_ID</td>
                        </tr>
                        <tr>
                            <th>이름</th>
                            <td>@ViewBag.M_NAME</td>
                        </tr>
                        <tr>
                            <th>이메일</th>
                            <td>@ViewBag.M_EMAIL</td>
                        </tr>
                        <tr>
                            <th>가입일</th>
                            <td>@ViewBag.M_CREDATE</td>
                        </tr>
                        <tr>
                            <th>회원등급</th>
                            <td>브론즈</td>
                        </tr>
                    </tbody>
                </table>
                <div class="banner">
                    <img src="/aboutCom/images/sample/join_benefit.jpg" width="100%" alt="" />
                </div>
                <div class="btn_group">
                    <a href="/MemberShip/Login" class="btn btn_brown_h40">로그인</a><a href="/" class="btn btn_white_h40">홈</a>
                </div>
            </div>
            <!-- //회원가입완료 -->
        </div>
        <!--//container-->



        <!--footer-->
        @{ Html.RenderPartial("~/Views/AboutMePartial/_Footer.cshtml");}
        <!--//footer-->
    </div>

}


@section Footer{

