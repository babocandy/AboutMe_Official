@model AboutMe.Domain.Entity.Review.MyReviewProductInputViewModel
@using AboutMe.Common.Helper
@using AboutMe.Common.Data
@using AboutMe.Web.Mobile.Controllers
@{
    ViewBag.Title = "나의 리뷰 - ABOUT ME";
    ViewBag.TopClass = "mypage";

    Layout = "~/Views/Shared/_AboutMeLayoutA.cshtml";

    var myController = ViewContext.Controller as MyReviewController;
}
@section Head{
    @{ Html.RenderPartial("~/Views/AboutMePartial/_Head.cshtml");}
    <link href="/aboutCom/css/review.css" rel="stylesheet" />
}

<!--header-->
@section Header{

    <style>
        .field-validation-error, .validation-summary-errors {
            color: red;
            font-size: 13px;
            line-height: 15px;
        }
    </style>


    <script>

    //결과값 처리

    var rNum = "@TempData["ResultNum"]";
    var rMsg = "@TempData["ResultMessage"]";

    if (rNum != "0" && rNum != "") {
        alert(rMsg);
    } else if (rNum == "0") {
        window.location = "@Url.Action("Complete", "MyReview")";
        self.close();
    }



    function findUploadFile() {
        document.getElementById("UploadImage").click();
    }

    function changeUploadFile(file) {
        var filename = file.value;
        filename = filename.split(/(\\|\/)/g).pop();

        document.frm.ImageFileName.value = filename;

        //이미지 미리보기 등록
        if (FileReader != undefined) {
            var reader = new FileReader();

            reader.onload = function (e) {
                var previewImage = document.getElementById("previewImage");
                previewImage.src = e.target.result;
            }

            console.log(file.files)
            reader.readAsDataURL(file.files[0]);
        }

    }
    </script>


}
<!--//header-->
@section Scripts{
    <script language="javascript">


    </script>
}
<!--container-->
@section Body{
    <div class="wrap review">
        @{ Html.RenderPartial("~/Views/AboutMePartial/_Header.cshtml");}

        <!--container-->
        <div class="container write">
            <div class="h2_area">
                <a href="@(Request.UrlReferrer.ToString())" class="historyback"><img src="/aboutCom/images/common/btn_historyback.gif" alt="뒤로가기" /></a>
                <h2>제품리뷰등록</h2>
            </div>
            <!-- 제품리뷰등록 -->
            <div class="review_write boxtypea">
                <h3>제품리뷰등록</h3>

                @using (Html.BeginForm("Update", "MyReview", FormMethod.Post, new { id = "frm", name = "frm"}))
                {                    @Html.AntiForgeryToken()
                    <div>@Html.ValidationSummary(true, "", new { @style = "display:inline;" })</div>
                    <input type="hidden" name="IDX" value="@Model.IDX" />
                    <input type="hidden" name="P_MAIN_IMG" value="@Model.P_MAIN_IMG" />
                    <input type="hidden" name="P_NAME" value="@Model.P_NAME" />
                    <input type="hidden" name="P_SUB_TITLE" value="@Model.P_SUB_TITLE" />
                    <input type="hidden" name="C_CATE_CODE" value="@Model.C_CATE_CODE" />
                    <input type="hidden" name="SKIN_TYPE" value="@Model.SKIN_TYPE" />
                    <input type="hidden" name="SKIN_TYPE_LBL" value="@Model.SKIN_TYPE_LBL" />

                    <fieldset>
                        <legend>제품리뷰등록 입력</legend>
                        <ul class="review_list">
                            <li class="product_info">
                                <div class="photo_info">
                                    <div class="photo"><img src="@string.Format("{0}{1}", myController._img_path_product, Model.P_MAIN_IMG)" alt="" /></div>
                                    <div class="detail">
                                        <span class="tit">@Model.P_NAME</span>
                                    </div>
                                </div>
                            </li>
                            @if (ReviewHelper.CheckBeauty(Model.C_CATE_CODE))
                            {
                                <li>
                                    <dl>
                                        <dt><span>@Html.ValidationMessageFor(model => model.SKIN_TYPE)</span>피부타입</dt>
                                        <dd class="frm_sel100per">

                                            <span class="selbox select_a">
                                                @Model.SKIN_TYPE_LBL
                                            </span>
                                           
                                        </dd>
                                    </dl>
                                </li>
                            }
                            <li>
                                <dl>
                                    <dt><span>@Html.ValidationMessageFor(model => model.COMMENT)</span>내용</dt>
                                    <dd>
                                        <textarea class="textarea" name="COMMENT">@Model.COMMENT</textarea>
                                    </dd>
                                </dl>
                            </li>
                            <li>
                                <dl>
                                    <dt>사진</dt>
                                    <dd class="photo_upload">
                                        <div>
                                            <input type="text" id="ImageFileName" name="ImageFileName" value="@Model.ADD_IMAGE" readonly="readonly" class="ipttypea" title="첨부사진 경로" />
                                        </div>
                                        <div class="thumb"><img  src="@string.Format("{0}{1}", myController._img_path_review, Model.ADD_IMAGE )" alt="" /></div>
                                    </dd>
                                </dl>
                            </li>
                        </ul>
                        <div class="bullistb">
                            <em class="info_sti">유의사항</em>
                            <ul>
                                <li>리뷰 작성 시 일반리뷰는 500포인트, 포토리뷰는 1,000포인트를 적립해 드립니다.</li>
                                <li>텍스트 리뷰 작성 후 포토리뷰로 수정 불가능합니다.</li>
                                <li>근거 없는 악성 비방글,게시판의 성격과 맞지 않는 글은 삭제 될 수 있으니 양해 부탁 드립니다.</li>
                            </ul>
                        </div>
                        <div class="btn_group">
                            <a href="#none" class="btn btn_brown_h40" onclick="document.frm.submit(); return false;">수정</a><a href="@Request.UrlReferrer.ToString()" class="btn btn_white_h40 v2">취소</a>
                        </div>
                    </fieldset>
                }
            </div>
            <!-- //제품리뷰등록 -->
        </div>
        <!--//container-->
        @{ Html.RenderPartial("~/Views/AboutMePartial/_Footer.cshtml");}
    </div>
}
<!--footer-->
@section Footer{
}
<!--//footer-->
