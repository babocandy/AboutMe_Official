@model AboutMe.Domain.Entity.AdminEtc.ADMIN_MEMBER

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AboutMeAdminLayoutA.cshtml";
}

@section Scripts{

    <script language="javascript">

        function frmCheck() {
            alert("여기입니다");

            var f = document.frm01;
            /**
            if (f.ADM_ID.value == '') {
                alert("관리자 아이디를 입력하세요.");
                return false;
            }
            **/
        }

        function selChange(obj_selectbox, sel_index) {
            alert(obj_selectbox[sel_index].value);
        }
    </script>

}

@section Left {

    @{Html.RenderPartial("~/Views/AboutMeAdminPartial/_AdminLeft.cshtml");}
}

@section Header{
    @{ Html.RenderPartial("~/Views/AboutMeAdminPartial/_AdminHeader.cshtml");}
}

@section Body{

    <div class="content">
        <!--path-->
        <div class="path">
            <a href="/index.asp">HOME</a> &gt; <a href="#">환경설정</a> &gt; <a href="#">전체운영설정</a> &gt; <strong>배송설정</strong>
        </div>
        <!--//path-->

        <div class="panel">
            <h3 class="sub-header">상품관리</h3>

         @using (Html.BeginForm("Create", "AdminMember", FormMethod.Post, new { id = "frm01", name = "frm01", enctype = "multipart/form-data" }))
         {
            @Html.AntiForgeryToken()  //폼 데이터 위조 방지 토큰 생성


                            <table class="table table_row">
                                <colgroup><col width="25%" /><col width="75%" /></colgroup>
                                <tbody>

                                    <tr>
                                        <th>관리자아이디</th>
                                        <td>@Html.TextBoxFor(model => model.ADM_ID, new { cssClass ="input-sm text-left"})  @Html.ValidationMessageFor(model => model.ADM_ID)</td>

                                    </tr>
                                    <tr>
                                        <th>관리자패스워드</th>
                                        <td>@Html.TextBoxFor(model => model.ADM_PASS, new { cssClass = "input-sm text-left" }) 확인<input type="text" name="ADM_PASS_CONFIRM" class="input-sm text-left" />
                                            @Html.ValidationMessageFor(model => model.ADM_PASS) 
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>관리자 이름</th>
                                        <td>@Html.TextBoxFor(model => model.ADM_NAME, new { cssClass = "input-sm text-left" }) </td>
                                    </tr>
                                    <tr>
                                        <th>관리자 부서</th>
                                        <td>
                                            @Html.DropDownList("ADM_DEPT", ViewData["ADM_DEPT"] as SelectListItem[], new { onchange = "selChange(this,this.selectedIndex)", style = "width:270px;" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>연애횟수</th>
                                        <td>@Html.TextBoxFor(model => model.POINT, new { cssClass = "input-sm text-left" }) </td>
                                    </tr>

                                    <tr>
                                        <th>사진</th>
                                        <td>
                                            <input type="file" name="ADM_PHOTO" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>저장</th>
                                        <td>
                                            <input type="submit" value="저장" class="btn btn-default middium" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

            }
        </div>

        <div class="btn_area">
            <a class="btn btn-primary small" href="/AdminMember/Index">목록</a>
        </div>


    </div>
}

