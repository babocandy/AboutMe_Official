@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_AboutMeAdminLayoutA.cshtml";
}

@section Scripts{
<script type="text/javascript" src="/cmsmanager/aboutCom/js/common_admin.js"></script>

<script>
    function fGoSave() {
        var f = document.frmFORM;
        if (f.ADM_ID.value.length < 4) {
            alert("아이디를 입력하세요.");
            return;
        }
        if (f.ADM_NAME.value.length < 1) {
            alert("이름을 입력하세요.");
            return;
        }
        if (f.ADM_PWD.value.length < 4) {
            alert("암호를 입력하세요.");
            return;
        }
        f.action = "/AdminUser/InsertOK";
        f.submit();
    }
</script>


}

@section Left {

    @{Html.RenderPartial("~/Views/AboutMeAdminPartial/_AdminLeft.cshtml");}
}

@section Header{
    @{ Html.RenderPartial("~/Views/AboutMeAdminPartial/_AdminHeader.cshtml");}
}

