@using (Html.BeginForm("InsertOK", "AdminUser", FormMethod.Post, new { id = "frmFORM", name = "frmFORM" }))
{
    @Html.AntiForgeryToken()  //폼 데이터 위조 방지 토큰 생성

                <table class="table table_row">
                    <colgroup><col width="200px" /><col width="*" /></colgroup>
                    <tbody>
                        <tr>
                            <th>*아이디</th>
                            <td><input type="text" name="ADM_ID" value="" maxlength="13" /></td>
                        </tr>
