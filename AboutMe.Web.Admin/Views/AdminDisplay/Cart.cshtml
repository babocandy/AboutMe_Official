                            <span>상품코드 :</span><input type="text" name="P_CODE" class="input-sm mt5" style="width:80%" value="@Model.CommonDisplay11.P_CODE" maxlength="10">
                            <input type="hidden" name="IDX" value="@Model.CommonDisplay11.IDX" />
                            <input type="hidden" name="KIND" value="@DisplayerCode.CART_PRODUCT_DISPLAY" />
                            <input type="hidden" name="SUB_KIND" value="@DisplayerCode.SUB_KIND_10" />
                            <input type="hidden" name="SEQ" value="2" />
                            <a href="#" class="btn btn-default small mt10" onclick="saveProductTypeDisplayer(this.parentElement); return false;">저장</a>
                        }
                    </td>
                    <td>
                        @using (Html.BeginForm("SaveProductTypeDisplayer", "AdminDisplay", FormMethod.Post))
                        {
                            <img src="@string.Format("{0}R270_{1}", myctrl._img_path_product, Model.CommonDisplay12.P_MAIN_IMG)" alt="" /><br><p class="tac mt5">@Model.CommonDisplay12.P_NAME</p><br><br>
                            <span>상품코드 :</span><input type="text" name="P_CODE" class="input-sm mt5" style="width:80%" value="@Model.CommonDisplay12.P_CODE" maxlength="10">
                            <input type="hidden" name="IDX" value="@Model.CommonDisplay12.IDX" />
                            <input type="hidden" name="KIND" value="@DisplayerCode.CART_PRODUCT_DISPLAY" />
                            <input type="hidden" name="SUB_KIND" value="@DisplayerCode.SUB_KIND_10" />
                            <input type="hidden" name="SEQ" value="3" />
                            <a href="#" class="btn btn-default small mt10" onclick="saveProductTypeDisplayer(this.parentElement); return false;">저장</a>
                        }
                    </td>
                    <td class="brnone">
                                                @using (Html.BeginForm("SaveProductTypeDisplayer", "AdminDisplay", FormMethod.Post))
                                                {
                                                    <img src="@string.Format("{0}R270_{1}", myctrl._img_path_product, Model.CommonDisplay13.P_MAIN_IMG)" alt="" /><br><p class="tac mt5">@Model.CommonDisplay13.P_NAME</p><br><br>
                            <span>상품코드 :</span><input type="text" name="P_CODE" class="input-sm mt5" style="width:80%" value="@Model.CommonDisplay13.P_CODE" maxlength="10">
                            <input type="hidden" name="IDX" value="@Model.CommonDisplay13.IDX" />
                            <input type="hidden" name="KIND" value="@DisplayerCode.CART_PRODUCT_DISPLAY" />
                            <input type="hidden" name="SUB_KIND" value="@DisplayerCode.SUB_KIND_10" />
                            <input type="hidden" name="SEQ" value="4" />
                            <a href="#" class="btn btn-default small mt10" onclick="saveProductTypeDisplayer(this.parentElement); return false;">저장</a>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!--//content-->
