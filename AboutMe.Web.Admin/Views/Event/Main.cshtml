        function UpdateSubmit(f) {
            if (f.IMAGE_FILE.value == "") {
                alert("이미지를 선택해주세요.");
                f.IMAGE_FILE.setfocus();
                return false;
            }
            if (f.URL.value == "") {
                alert("URL을 입력해주세요.");
                f.URL.setfocus();
                return false;
            }
            if (confirm("이미지를 변경하시겠습니까?")) {
                f.action = "/Event/MainUpdate";
                f.submit();
            }
        }

        function DeleteSubmit(f)
        {
            if (confirm("이미지를 삭제 하시겠습니까?"))
            {
                f.action = "/Event/MainDelete";
                f.submit();
            }
        }
    </script>

