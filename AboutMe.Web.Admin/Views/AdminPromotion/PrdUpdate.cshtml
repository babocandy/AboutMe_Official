    //시작일자가 현재보다 이전인지
    protected bool IsOverStartTime(DateTime StartDate)
    {

        bool rtn = false;

        if (DateTime.Now > StartDate)
        {
            rtn = true;
        }


        return rtn;
    }


    //종료일자가 지났는지
    protected bool IsOverEndingTime(DateTime ToDate)
    {

        bool rtn = false;

        if (DateTime.Now > ToDate)
        {
            rtn = true;
        }


        return rtn;
    }

}

