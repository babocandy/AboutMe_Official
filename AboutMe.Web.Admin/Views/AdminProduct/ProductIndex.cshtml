    function selectedChk(num) {
        //alert(num);
        var f = document.bform
        var cbox = document.bform.P_CODE;
        if (cbox.length) {
            if (cbox[num].checked == false) {
                cbox[num].checked = true;
                sel_ck(num); 	//체크박스 건별 체크
