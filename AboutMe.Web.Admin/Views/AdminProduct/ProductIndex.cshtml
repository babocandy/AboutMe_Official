    function sel_ck(num) {
        var f = document.bform
        var cbox = f.P_CODE;
        var number_ch = f.number_ch.value;
        if (cbox.length) {
            if (cbox[num].checked == true) {
                f.number_ch.value = Number(number_ch) + 1
            }
            else if (cbox[num].checked == false) {
                f.number_ch.value = Number(number_ch) - 1
            }
        }
        else {
            if (cbox.checked == true) {
                f.number_ch.value = Number(number_ch) + 1
            }
            else if (cbox.checked == false) {
                f.number_ch.value = Number(number_ch) - 1
            }
        }
    }



