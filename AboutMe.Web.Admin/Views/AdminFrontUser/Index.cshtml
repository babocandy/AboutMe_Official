@model IEnumerable<AboutMe.Domain.Entity.AdminFrontMember.SP_ADMIN_FRONT_MEMBER_VIEW_Result>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AboutMeAdminLayoutA.cshtml";
}

@section Scripts{

}

@section Left {

    @{Html.RenderPartial("~/Views/AboutMeAdminPartial/_AdminLeft.cshtml");}
}

@section Header{
    @{ Html.RenderPartial("~/Views/AboutMeAdminPartial/_AdminHeader.cshtml");}
}

@section Body{

    <div class="content">
        <!--path-->
        <div class="path">
            <a href="/index.asp">HOME</a> &gt; <a href="#">수퍼어드민</a> &gt; <a href="#">회원관리</a> &gt; <strong>회원관리</strong>
        </div>
        <!--//path-->

        <div class="tar mb10">
            <!--a class="btn btn-default middium" href="/AdminFrontMember/Insert">회원 등록</a>-->
            <a class="btn btn-default middium" href="/AdminFrontMember/Excel">EXEL 다운로드</a>
        </div>

        <div class="panel">
            <h3 class="sub-header">회원관리</h3>
            <div class="alert alert-info">
                <ul>
                    <li>· 회원을 수정/삭제 합니다.</li>
                    <li>· 회원을 수정/삭제 합니다.</li>
                </ul>
            </div>
        </div>

        <div class="panel">
            <h4>관리자관리</h4>

            @{ var selected_str = "selected";}
            @using (Html.BeginForm("Index", "AdminFrontMember", FormMethod.Post, new { id = "frmSearch", name = "frmSearch", onsubmit = "return frmCheck();" }))
            {
                @Html.AntiForgeryToken()  //폼 데이터 위조 방지 토큰 생성


                                        <table class="table table_row">
                                            <colgroup><col width="20%" /><col width="*" /></colgroup>
                                            <tbody>
                                                <tr>
                                                    <th scope="row" class="vam">검색</th>
                                                    <td class="condition_seacth">
                                                        <select name="SEARCHCOL" style="width:170px;">
                                                            <option value="ADM_ID" @if (ViewBag.SEARCHCOL == "ADM_ID") { @selected_str    ; }>아이디</option>
                                                            <option value="ADM_NAME" @if (ViewBag.SEARCHCOL == "ADM_NAME") { @selected_str    ; }>이름</option>
                                                        </select>  <input type="text" class="input-sm text-left" name="SEARCHKEYWORD" value="@ViewBag.SEARCHKEYWORD" />
                                                        <a href="javascript:document.frmSearch.submit();" class="btn btn-default small">search</a>
                                                    </td>
                                                </tr>

                                            </tbody>
                                        </table>
            }
        </div>

        <div class="panel">
            <h4>회원 리스트</h4>
            <!-- 처음과 마지막  th, td에 각각 "brnone" class 사용합니다.-->
            <table class="table table_col">
                <colgroup><col width="8%" /><col width="10%" /><col width="10%" /><col width="20%" /><col width="*" /><col width="8%" /></colgroup>
                <thead>
                    <tr>
                        <th scope="col" class="brnone">No</th>
                        <th scope="col">아이디</th>
                        <th scope="col">이름</th>
                        <th scope="col">임직원구분</th>
                        <th scope="col">등급</th>
                        <th scope="col">EMAIL</th>
                        <th scope="col">전화</th>

                        <th scope="col">포인트</th>
                        <th scope="col">가입일</th>
                        <th scope="col">탈퇴여부</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        if (Model.Count() < 1)
                        {
                            <tr>
                                <td colspan="7" class="brnone">No data...</td>
                            </tr>
                        }
                    }

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="brnone">00</td>
                            <td><a href="/AdminFrontMember/Edit?SEL_M_ID=@item.M_ID" class="btn btn-primary small">@item.M_ID</a></td>
                            <td><a href="/AdminFrontMember/Edit?SEL_ADM_ID=@item.M_ID" class="btn btn-primary small">@item.M_NAME</a></td>
                            <td>@item.M_GBN</td>
                            <td>@item.M_GRADE</td>
                            <td>@item.M_EMAIL</td>
                            <td>@item.M_MOBILE</td>
                            <td>@item.M_POINT</td>
                            <td>@item.M_CREDATE</td>
                            <td class="brnone">@item.M_IS_RETIRE</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


        @{Html.RenderAction("Paging", "CommonChildAction", new { TotalRecord = ViewBag.TotalRecord, RecordPerPage = ViewBag.PAGESIZE, PagePerBlock = 10, CurrentPage = ViewBag.PAGE, QueryStr = "SEARCHCOL=" + ViewBag.SEARCHCOL + "&SEARCHKEYWORD=" + ViewBag.SEARCHKEYWORD + "&SORTCOL=" + ViewBag.SORTCOL + "&SORTDIR=" + ViewBag.SORTDIR });}


        <!--버튼모음-->
        <!--
        ************************************************<br />
        버튼가이드 <br /><br />
        대버튼 : <br />
        <a href="#" class="btn btn-default large">확인</a>
        <a href="#" class="btn btn-primary large">취소</a>
        <br /><br />
        중버튼 : <br />
        <a href="#" class="btn btn-default middium">편집중인 설정으로 저장</a>
        <br /><br />
        소버튼 : <br />
        <a href="#" class="btn btn-default small">저장</a>
        <a href="#" class="btn btn-success small">수정</a>
        <a href="#" class="btn btn-primary small">삭제</a><br />
        ↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑<br />
        3가지 타입 버튼이 필요할때 적용<br />
        <a href="#" class="btn btn-info small">추가</a>
            -->
        <!--//버튼모음-->

    </div>
}

