@model List<AboutMe.Domain.Entity.Exhibit.SP_ADMIN_EXHIBIT_TAB_PRODUCT_LIST_Result>

@if (Model.Count() == 0)
{
    <tr>
        <td colspan="8">전시상품이 없습니다.</td>
    </tr>
}
else
{
    foreach (var item in Model)
    {
        <tr>
            <td><input type="checkbox" class="tabProductChk" value="@item.IDX" /></td>
            <td><input type="number" name="DISPLAY_ORDER" class="input-sm product-display-order" data-product-idx="@item.IDX" style="width:50px;" value="@item.DISPLAY_ORDER"/></td>
            <td>@item.P_CODE</td>
            <td>@item.P_NAME</td>
            <td>@String.Format("{0:#,#0.}", item.SELLING_PRICE)</td>
            <td>@String.Format("{0:#,#0.}", item.DISCOUNT_PRICE)</td>
            <td>@item.PROMOTION_YN</td>
            <td>@item.COUPON_YN</td>
        </tr>
    }
}
