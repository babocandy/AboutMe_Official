    <div class="panel tac">
        <a style="width:100px;display:none" id="regbtn" class="btn btn-default middium" href="#none" onclick="onRegBtnClick();">저장</a>
        
        @Html.ActionLink("취소", "", @Model.SearchOption, new { @class = "btn btn-primary  middium", style = "width:100px" })
    </div>
</div>
