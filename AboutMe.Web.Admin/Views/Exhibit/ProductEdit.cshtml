                <th>상품수</th>
                <th>편집</th>
            </tr>
    @{
        int num = 1;           
    }
    @foreach (var item in Model.TabList)
    {     
            <tr>
                <td><input type="checkbox" class="tabchk" value="@item.IDX" /></td>
                <td class="num">@num</td>
