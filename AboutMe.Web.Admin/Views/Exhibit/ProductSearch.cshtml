@model List<AboutMe.Domain.Entity.Exhibit.SP_ADMIN_EXHIBIT_TAB_PRODUCT_SEARCH_Result>

@if (Model.Count() == 0)
{ 
<tr>
    <td colspan="7">검색결과가 없습니다.</td>
</tr>
}
else
{

    foreach (var item in Model)
    {
        <tr>
            <td><input type="checkbox" class="pcodeChk" value="@item.P_CODE" /></td>
            <td>@item.P_CODE</td>
            <td>@item.P_NAME</td>
            <td>@String.Format("{0:#,#0.}", item.SELLING_PRICE)</td>
            <td>@String.Format("{0:#,#0.}", item.DISCOUNT_PRICE)</td>
            <td>@item.PROMOTION_YN</td>
            <td>@item.COUPON_YN</td>
        </tr>
    }
}
