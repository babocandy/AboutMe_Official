        //임직원 신청내역 수정-------------------------------------------------
    function fGoSave()
    {
        var f = document.frmFORM;
        if (f.SEL_IDX.value.length < 1) {
            alert("문서번호가 없습니다..");
            return;
        }
        //f.action = "/AdminFrontMember/StaffRequestEditOK_Basic";
