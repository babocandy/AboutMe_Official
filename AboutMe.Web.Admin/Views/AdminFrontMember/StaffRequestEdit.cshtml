        $.ajax({
            url: strURL,
            async: false,  //동기 통신
            type: 'POST',
            dataType: 'json',
            data: {
                IDX: strIDX
                , STATUS: strSTATUS
                , PROC_COMMENT: strPROC_COMMENT
            },
            success: function (retDATA) {
                if(retDATA.ERR_CODE=="0")
                {
                    alert("수정되었습니다.\n 페이지를 새로고칩니다.");
                    fReload();
