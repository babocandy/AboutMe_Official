@section Body{


@{ 
     var selected_str = "selected";

     @helper fGradeName(string gradeCode)
     {
         var grade_name = gradeCode;
        switch(gradeCode)
        {
            case "B": grade_name ="브론즈";
                break;
            case "S": grade_name ="실버";
                break;
            case "G": grade_name ="골드";
                break;
            case "V": grade_name ="VIP";
                break;
        
        }
        <div>@grade_name</div>
     }

    @helper fIsRerireNAME(string is_retire)
    {
        var isretire_name = is_retire;
        switch (is_retire)
        {
            case "Y": isretire_name = "탈퇴";
                break;
            case "N": isretire_name = "활동";
                break;

        }
        <div>@isretire_name</div>
    }

    @helper fM_GBN_NAME(string m_gbn)
    {
        var m_gbn_name = m_gbn;
        switch (m_gbn)
        {
            case "A": m_gbn_name = "일반회원";
                break;
            case "S": m_gbn_name = "임직원";
                break;

        }
        <div>@m_gbn_name</div>
    }

    @helper fCheckBoxChecked(string strList,string strChked)
    {
        if (strList != null && strChked != null)
        {
            if (strList.Contains(strChked))
            {
                @(" checked")
            }
        }

}

}


    <div class="content">
        <!--path-->
        <div class="path">
            <a href="/index.asp">HOME</a> &gt; <a href="#">수퍼어드민</a> &gt; <a href="#">회원관리</a> &gt; <strong>회원관리</strong>
        </div>
        <!--//path-->

        <div class="tar mb10">
            <!--a class="btn btn-default middium" href="/AdminFrontMember/Insert">회원 등록</a>-->
            <a class="btn btn-default middium" href="/AdminFrontMember/Excel">EXEL 다운로드</a>
        </div>

        <div class="panel">
            <h3 class="sub-header">회원관리</h3>
            <div class="alert alert-info">
                <ul>
                    <li>· 회원을 수정/삭제 합니다.</li>
                    <li>· 회원을 수정/삭제 합니다.</li>
                </ul>
            </div>
        </div>

        <div class="panel">
            <h4>회원관리</h4>

            <script>
                function fGoSearch()
                {
                    var f = document.frmSearch;
                    f.PAGE.value = "1";
                    f.action = "/AdminFrontMember/Index";
                    f.method = "post";
                    f.submit();
                }
            </script>

            <form name="frmSearch" method="post" action="">
                <input type="hidden" name="PAGE" value="@ViewBag.PAGE">

                <table class="table table_row">
                    <colgroup><col width="20%" /><col width="*" /></colgroup>
                    <tbody>
                        <tr>
                            <th scope="row" class="vam">가입기간</th>
                            <td class="condition_seacth">
                                <input type="text" class="input-sm text-left" name="DATE_FROM" value="@ViewBag.DATE_FROM">
                                ~
                                <input type="text" class="input-sm text-left" name="DATE_TO" value="@ViewBag.DATE_TO">
                            </td>
                            <td class="condition_seacth" rowspan="4">
                                <a href="javascript:fGoSearch();" class="btn btn-default small">search</a> 
                            </td>
                        </tr>

                        <tr>
                            <th scope="row" class="vam">검색조건</th>
                            <td class="condition_seacth">
                                <select name="SEARCH_COL" style="width:170px;">
                                    <option value="M_ID" @if (ViewBag.SEARCH_COL == "M_ID") { @selected_str       ; }>아이디</option>
                                    <option value="M_NAME" @if (ViewBag.SEARCH_COL == "M_NAME") { @selected_str       ; }>이름</option>
                                    <option value="M_EMAIL" @if (ViewBag.SEARCH_COL == "M_EMAIL") { @selected_str        ; }>EMAIL</option>
                                    <option value="M_MOBILE" @if (ViewBag.SEARCH_COL == "M_MOBILE") { @selected_str          ; }>핸드폰</option>
                                    <option value="M_PHONE" @if (ViewBag.SEARCH_COL == "M_PHONE") { @selected_str          ; }>전화번호</option>
                                </select>  <input type="text" class="input-sm text-left" name="SEARCH_KEYWORD" value="@ViewBag.SEARCH_KEYWORD" />
                            </td>
                        </tr>
                        <tr>
                            <th scope="row" class="vam">임직원구분/등급</th>
                            <td class="condition_seacth">
                                <select name="GBN" style="width:170px;">
                                    <option value="" @if (ViewBag.GBN == "") { @selected_str        ; }>전체</option>
                                    <option value="A" @if (ViewBag.GBN == "A") { @selected_str        ; }>일반회원</option>
                                    <option value="S" @if (ViewBag.GBN == "S") { @selected_str         ; }>임직원</option>
                                </select>

                                <label for="icon1"><input type="checkbox" id="icon1" name="GRADE_LIST" value="B" @fCheckBoxChecked(@ViewBag.GRADE_LIST, "B") /><span class="txt mr5">브론즈</span></label>
                                <label for="icon1"><input type="checkbox" id="icon1" name="GRADE_LIST" value="S" @fCheckBoxChecked(@ViewBag.GRADE_LIST, "S") /><span class="txt mr5">실버</span></label>
                                <label for="icon1"><input type="checkbox" id="icon1" name="GRADE_LIST" value="G" @fCheckBoxChecked(@ViewBag.GRADE_LIST, "G") /><span class="txt mr5">골드</span></label>
                                <label for="icon1"><input type="checkbox" id="icon1" name="GRADE_LIST" value="V" @fCheckBoxChecked(@ViewBag.GRADE_LIST, "V") /><span class="txt mr5">VIP</span></label>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row" class="vam">탈퇴여부</th>
                            <td class="condition_seacth">
                                <select name="IS_RETIRE" style="width:170px;">
                                    <option value="" @if (ViewBag.IS_RETIRE == "") { @selected_str         ; }>전체</option>
                                    <option value="N" @if (ViewBag.IS_RETIRE == "N") { @selected_str         ; }>활동회원</option>
                                    <option value="Y" @if (ViewBag.IS_RETIRE == "Y") { @selected_str          ; }>탈퇴회원</option>
                                </select>

                            </td>
                        </tr>

                    </tbody>
                </table>


                <div class="">
                    <table class="table table_row">
                        <colgroup><col width="12%" /><col width="*" /><col width="12%" /><col width="*" /></colgroup>
                        <tr>
                            <th>총검색</th>
                            <td>@ViewBag.TotalRecord.ToString("#,##0") 건</td>
                            <th>출력수</th>
                            <td>
                                <select name="PAGESIZE" onchange="javascript:fGoSearch();">
                                    <option value="10" @if (ViewBag.PAGESIZE == 10) { @selected_str           ; }>10개</option>
                                    <option value="20" @if (ViewBag.PAGESIZE == 20) { @selected_str           ; }>20개</option>
                                    <option value="50" @if (ViewBag.PAGESIZE == 50) { @selected_str            ; }>50개</option>
                                    <option value="100" @if (ViewBag.PAGESIZE == 100) { @selected_str            ; }>100개</option>
                                    <option value="200" @if (ViewBag.PAGESIZE == 200) { @selected_str            ; }>200개</option>
                                </select>
                            </td>
                        </tr>
                    </table>
                </div>


            </form>




        </div>

ViewBag.GRADE_LIST : @ViewBag.GRADE_LIST
        <div class="panel">
            <h4>회원 리스트</h4>
            <!-- 처음과 마지막  th, td에 각각 "brnone" class 사용합니다.-->
            <table class="table table_col">
                <colgroup><col width="8%" /><col width="10%" /><col width="10%" /><col width="20%" /><col width="*" /><col width="8%" /></colgroup>
                <thead>
                    <tr>
                        <th scope="col" class="brnone">No</th>
                        <th scope="col">아이디</th>
                        <th scope="col">이름</th>
                        <th scope="col">임직원구분</th>
                        <th scope="col">등급</th>
                        <th scope="col">EMAIL</th>
                        <th scope="col">전화</th>

                        <th scope="col">포인트</th>
                        <th scope="col">가입일</th>
                        <th scope="col">탈퇴여부</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        if (Model.Count() < 1)
                        {
                            <tr>
                                <td colspan="7" class="brnone">No data...</td>
                            </tr>
                        }
                    }
                    
                    @{
                    var count = ViewBag.TotalRecord - (ViewBag.PAGE - 1) * ViewBag.PAGESIZE;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="brnone">@count.ToString("#,##0")</td>
                            <td><a href="/AdminFrontMember/Edit?SEL_M_ID=@item.M_ID" class="btn btn-primary small">@item.M_ID</a></td>
                            <td><a href="/AdminFrontMember/Edit?SEL_ADM_ID=@item.M_ID" class="btn btn-primary small">@item.M_NAME</a></td>
                            <td>@fM_GBN_NAME(@item.M_GBN)</td>
                            <td>@fGradeName(@item.M_GRADE)</td>
                            <td>@item.M_EMAIL</td>
                            <td>@item.M_MOBILE</td>
                            <td>@item.M_POINT.ToString("#,##0")</td>
                            <td>@item.M_CREDATE.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="brnone">@fIsRerireNAME(@item.M_IS_RETIRE)</td>
                        </tr>
                        count = count - 1;
                    }

                    }
    
                </tbody>
            </table>
        </div>


        @{Html.RenderAction("Paging", "CommonChildAction", new { TotalRecord = ViewBag.TotalRecord, RecordPerPage = ViewBag.PAGESIZE, PagePerBlock = 10, CurrentPage = ViewBag.PAGE, QueryStr = "SEARCHCOL=" + ViewBag.SEARCHCOL + "&SEARCHKEYWORD=" + ViewBag.SEARCHKEYWORD + "&SORTCOL=" + ViewBag.SORTCOL + "&SORTDIR=" + ViewBag.SORTDIR });}


