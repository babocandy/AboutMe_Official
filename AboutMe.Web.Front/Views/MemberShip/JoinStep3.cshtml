                    alert("이미 사용중이거나 사용할수 없는 아이디 입니다.다른 아이디를 입력하세요." );
                }
            },
            error: function (e) {
                alert("ajax 오류발생1");
            }
        }); //ajax


    } //function fID_DupCheck()
