            return;
        }
        //if (f.M_ID.value.length < 4) {
        //    alert("아이디를 영문 숫자 조합하여 4~12자리로 만들어 주세요");
        //    return;
        //}

        var strM_ID = f.M_ID.value;

        var strURL = "/MemberShip/AjaxID_DUPCheck"; 

        $.ajax({
            url: strURL,
            async: false,  //동기 통신
            type: 'POST',
            dataType: 'json',
            data: {
                M_ID: strM_ID
            },
            success: function (retDATA) {
                if (retDATA.ERR_CODE == "0") {
                    glID_DUP_CHECKED = true;
                    alert("사용가능한 ID입니다.");
                
                }
                else {
