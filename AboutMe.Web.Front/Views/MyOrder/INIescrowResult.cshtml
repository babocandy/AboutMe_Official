@model AboutMe.Domain.Entity.Order.INIESCROW_CONFIRM
@{
    Layout = null;
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="ko" xml:lang="ko">
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=1323, user-scalable = yes" />
    <meta name="Keywords" content="ABOUT ME" />
    <meta name="Description" content="ABOUT ME" />
    <link rel="shortcut icon" href="/aboutCom/images/common/icon_home.ico" />
    <link href="/aboutCom/css/import.css" rel="stylesheet" />
    <script src="/aboutCom/js/lib/jquery-1.8.3.min.js" type="text/javascript"></script>
    <script src="/aboutCom/js/lib/jquery.easing-1.3.min.js" type="text/javascript"></script>
    <script src="/aboutCom/js/lib/dropdown.js" type="text/javascript"></script>
    <script src="/aboutCom/js/lib/jquery.countdown.js" type="text/javascript"></script>
    <script src="/aboutCom/js/lib/jquery.dotdotdot.js" type="text/javascript"></script>
    <script src="/aboutCom/js/script.js" type="text/javascript"></script>
    <title>ABOUT ME</title>
    <script language="javascript">
        var openwin = window.open("/Content/child.html", "childwin2", "width=300,height=150");
        openwin.close();
    </script>

</head>
<body class="popup">
    <!-- 비밀번호변경 팝업 -->
    <div class="popupwrap">
        <div class="pop">
            <!--pop_top-->
            <div class="pop_top">
                <div class="title_area">
                    <p class="title">에스크로 지급확인/거절 결과</p>
                </div>
                <a href="#none" class="pop_close" onclick="opener.location.reload(); PopupClose()"><img src="/aboutCom/images/review/reviewpop_close.gif" alt="닫기" /></a>
            </div>
            <!--//pop_top-->
            <!--pop_bottom-->
            <div class="escrow_conf">
                <p class="confirm_msg">
                    @if (Model.Resultcode == "00")
                    {
                        if (!string.IsNullOrEmpty(Model.DNY_Date))
                        {
                            @Html.Raw("에스크로 지급거절이 완료되었습니다.<br /><br />");
                        }
                        else
                        {
                            @Html.Raw("에스크로 지급확인이 완료되었습니다.<br /><br />");
                        }
                    }
                    else
                    {
                        if (!string.IsNullOrEmpty(Model.DNY_Date))
                        {
                            @Html.Raw("에스크로 지급거절중 아래와 같은 에러가 발생 되었습니다.");
                        }
                        else
                        {
                            @Html.Raw("에스크로 지급확인중 아래와 같은 에러가 발생 되었습니다.");
                        }
                    }
                </p>

                @if (Model.Resultcode != "00")
                { 
                    <div class="confirm_info">
                        <span>결과코드 : <em>@Model.Resultcode</em></span>
                        <span>결과 메세지 :<em>@Model.ResultMsg</em></span>
                    </div>
                }
                <a href="#none" class="btn_brown_w96h38" onclick="opener.location.reload(); PopupClose()">창닫기</a>
            </div>
            <!--//pop_bottom-->
        </div>
    </div>
    <!-- //비밀번호변경 팝업 -->
</body>
</html>
